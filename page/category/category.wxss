.cate_alllist
{
  display: flex;
  justify-content: space-between;
}
.cate_leftitems
{
  width:25%;
  text-align: center;
  font-size: 16px;
  line-height: 45px;
  height: 95vh;
  color: #8d8d8d;
  background-color: #efefef;
}
.cate_rightitems
{
  width: 80%;
  height: calc(95vh - 20px);
  background-color: #fff;
  overflow: scroll;
  padding:10px 0 10px 10px;
}
.cate_itembanner
{
  width: 80px;
  height: 80px;
}
.cate_itembannerimg
{
  width: 100%;
  height: 100%;
  border-radius: 4px;
}
.cate_listitem
{
  display: flex;
  margin: 0 0 10px;
}
.cate_itemdetail
{
  font-size: 15px;
  padding: 0px 5px;
  line-height: 20px;
  width: calc(100% - 80px);
}
.cate_itemname
{
  font-weight: bold;
}
.cate_itemdesc
{
  color: #8d8d8d;
  font-size: 12px;
}
.cate_itemprice
{
  font-size: 16px;
  font-weight: bold;
}
.cate_itemadd
{
  text-align: right;
}

.addclass
{
  background-color: #fff;
  color:#000;
}

.swiper_container {
  height: 5vh;
  line-height: 5vh;
  width: calc(100% - 10px);
  padding: 0 0 0 10px
}

.swiper_item {
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}
.cate_alllist
{
  display: flex;
  justify-content: space-between;
}
.cate_leftitems
{
  width:25%;
  text-align: center;
  font-size: 16px;
  line-height: 35px;
  height: 100vh;
  color: #8d8d8d;
  background-color: #efefef;
}
.cate_rightitems
{
  width: 80%;
  height: calc(100vh - 20px);
  background-color: #fff;
  overflow: scroll;
  padding: 10px;
}
.cate_itembanner
{
  width: 80px;
  height: 80px;
}
.cate_itembannerimg
{
  width: 100%;
  height: 100%;
  border-radius: 4px;
}
.cate_listitem
{
  display: flex;
  margin: 0 0 10px;
}
.cate_itemdetail
{
  font-size: 15px;
  padding: 0px 5px;
  line-height: 20px;
  width: calc(100% - 80px);
}
.cate_itemname
{
  font-weight: bold;
}
.cate_itemdesc
{
  color: #8d8d8d;
  font-size: 12px;
}
.cate_itemprice
{
  font-size: 16px;
  font-weight: bold;
}
.cate_itemadd
{
  text-align: right;
}

.addclass
{
  background-color: #fff;
  color:#000;
}